<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    tools:context=".Fragments.LoginFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="8"
        android:columnCount="2"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:useDefaultMargins="false" >

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Server Host:"
            android:layout_gravity="right"
            android:id="@+id/serverHostText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <EditText
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/serverHostEditText"
            android:text="192.168.254.111"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Server Port:"
            android:layout_gravity="right"
            android:id="@+id/serverPortText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <EditText
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/serverPortEditText"
            android:text="8080"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="User Name:"
            android:layout_gravity="right"
            android:id="@+id/usernameText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <EditText
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/usernameEditText"
            android:text="a"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password:"
            android:layout_gravity="right"
            android:id="@+id/passwordText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <EditText
            android:inputType="textPassword"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/passwordEditText"
            android:text="a"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="First Name:"
            android:layout_gravity="right"
            android:id="@+id/firstNameText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <EditText
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Name:"
            android:layout_gravity="right"
            android:id="@+id/lastNameText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <EditText
            android:inputType="text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/lastNameEditText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Email:"
            android:layout_gravity="right"
            android:id="@+id/emailText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <EditText
            android:inputType="textEmailAddress"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <TextView
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Gender:"
            android:layout_gravity="right"
            android:id="@+id/genderText"
            android:layout_margin="0dp"
            android:padding="0dp" />

        <RadioGroup
            android:id="@+id/genderRadioGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/genderRadioMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:onClick="onClick"/>

            <RadioButton
                android:id="@+id/genderRadioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Female" />
        </RadioGroup>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="1"
        android:columnCount="2"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:useDefaultMargins="false" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:clickable="true"
            android:id="@+id/loginButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:clickable="true"
            android:id="@+id/registerButton"
            />
    </LinearLayout>

</LinearLayout>
